(set-logic QF_UFDTLIA)
(declare-const q Int)
; (declare-enum-sort LightStatus (On Off))

(define-system plus_one
  :input ((a Int))
  :output ((b Int))
  :local ((l Int))
  :inv (= b (+ a 1))
)

(define-system gconsttst
  :input ((a Int))
  :output ((b Int))
  :subsys (sub (plus_one a b))
  :init (= b 0)
)

(check-system gconsttst
  :input ((a Int))
  :output ((b Int))
  :reachable (rprop1 (= b 4))
  :query (q1 (rprop1)) 
)
